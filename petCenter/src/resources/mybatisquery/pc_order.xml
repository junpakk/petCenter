<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
          "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 수정하기 -->
<mapper namespace="main.pc.order.dao.OrderDAO">

<!-- foreach -->
<insert id="orderInsert" parameterType="ordervo" >
	<foreach collection="list" item="item" separator=";" open="DECLARE BEGIN" close="; END;">
	INSERT INTO PC_ORDER (	 ONUM
								,MNUM
								,MNAME
								,CNUM
								,ONAME
								,OCNT
								,OPSUM
								,DELIVERY
								,TPRICE
								,MHP
								,OZCODE
								,ORADDRESS
								,ORADDRESSD
								,OJIBUN
								,DELYN
								,IDATE
								,UDATE)
	
            			VALUES  
    							(        			
            					 #{item.onum} 
            					,#{item.mnum}
            					,#{item.mname}
								,#{item.cnum}            					             					
            					,#{item.oname}
            					,#{item.ocnt}
            					,#{item.opsum}
            					,#{item.delivery}
            					,#{item.tprice}
            					,#{item.mhp}
            					,#{item.ozcode}
            					,#{item.oraddress}
            					,#{item.oraddressd}
            					,#{item.ojibun}
            					,'Y' 
            					,SYSDATE 
            					,SYSDATE)
	</foreach>
</insert>

<select id="orderSelectAll" parameterType="ordervo" resultType="ordervo">

	SELECT   A.ONUM			ONUM
			,A.MNUM			MNUM
			,A.MNAME		MNAME
			,A.CNUM			CNUM
			,A.ONAME		ONAME
			,A.OCNT			OCNT
			,A.OPSUM		OPSUM
			,A.DELIVERY		DELIVERY
			,A.TPRICE		TPRICE
			,A.MHP			MHP
			,A.OZCODE		OZCODE
			,A.ORADDRESS	ORADDRESS
			,A.ORADDRESSD	ORADDRESSD
			,A.OJIBUN		OJIBUN
			,A.DELYN		DELYN
			,A.IDATE		IDATE
			,A.UDATE		UDATE
	FROM	PC_ORDER A
	WHERE	A.DELYN = 'Y'
	AND		A.MNUM	= #{mnum}

</select>

</mapper>